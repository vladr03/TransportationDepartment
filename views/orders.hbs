<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #F8F8FF;
        }

        .accordion {
            background-color: #eee;
            color: #444;
            cursor: pointer;
            padding: 18px;
            width: 100%;
            border: none;
            text-align: left;
            outline: none;
            font-size: 15px;
            transition: 0.4s;
            margin-top: 10px;
        }

        .active,
        .accordion:hover {
            background-color: #ccc;
        }

        .panel {
            padding: 0 18px;
            display: none;
            background-color: #fff;
            overflow: hidden;
        }

        span {
            font-weight: bold;
        }
    </style>
</head>

<body>
    {{#each transportations}}
    <button class="accordion">{{date delivery_date format="MMMM DD, YYYY"}}</button>
    <div class="panel">
        <div>
            <p>Ð¡ustomer's name: <span>{{name}}</span></p>

            <p>Cargo: <span>{{cargo}}</span></p>

            <p>Truck: <span>{{truck}}</span></p>

            <p>City: <span>{{city}}</span></p>
        </div>
    </div>
    {{/each}}
    <script>
        var acc = document.getElementsByClassName("accordion");
        var i;

        for (i = 0; i < acc.length; i++) {
            acc[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var panel = this.nextElementSibling;
                if (panel.style.display === "block") {
                    panel.style.display = "none";
                } else {
                    panel.style.display = "block";
                }
            });
        }
    </script>
</body>
<html>